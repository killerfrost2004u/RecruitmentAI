<Window x:Class="RecruitmentAI.App.ManualAssessmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expert Manual Assessment" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Expert English Assessment" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <GroupBox Grid.Row="1" Header="Candidate Information" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Name="txtCandidateInfo" Margin="5"/>
                <Button Name="btnPlayVoiceNote" Content="Play Voice Note" 
                        Click="BtnPlayVoiceNote_Click" Margin="0,5" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Expert Assessment" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="English Level (CEFR)" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <ComboBox Name="cmbExpertLevel" Height="25" Margin="0,0,0,5">
                    <ComboBoxItem Content="A1 - Beginner"/>
                    <ComboBoxItem Content="A2 - Elementary"/>
                    <ComboBoxItem Content="B1 - Intermediate"/>
                    <ComboBoxItem Content="B2 - Upper Intermediate"/>
                    <ComboBoxItem Content="C1 - Advanced"/>
                    <ComboBoxItem Content="C2 - Proficient"/>
                </ComboBox>
                
                <TextBlock Text="Expert Feedback" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBox Name="txtExpertFeedback" Height="80" TextWrapping="Wrap" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnSave" Content="Save Assessment" 
                    Click="BtnSave_Click" Margin="5" Padding="15,5" 
                    Background="#28a745" Foreground="White"/>
            <Button Name="btnCancel" Content="Cancel" 
                    Click="BtnCancel_Click" Margin="5" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
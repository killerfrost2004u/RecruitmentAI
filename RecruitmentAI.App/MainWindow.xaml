<Window x:Class="RecruitmentAI.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recruitment AI Assistant" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Recruitment AI Assistant" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <!-- Add Candidate Tab -->
            <TabItem Header="Add Candidate">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10" Width="400">
                        
                        <!-- Candidate Name -->
                        <GroupBox Header="Candidate Information" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Full Name" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtFullName" Margin="0,0,0,5" Height="25" 
                                         ToolTip="Enter candidate's full name"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Contact Information -->
                        <GroupBox Header="Contact Information" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtEmail" Margin="0,0,0,5" Height="25"/>
                                
                                <TextBlock Text="Phone Number" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtPhone" Margin="0,0,0,5" Height="25"/>
                                
                                <TextBlock Text="Age" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtAge" Margin="0,0,0,5" Height="25"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Education & Military Status -->
                        <GroupBox Header="Status Information" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Education Status" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <ComboBox Name="cmbEducation" Margin="0,0,0,5" Height="25">
                                    <ComboBoxItem Content="Graduate"/>
                                    <ComboBoxItem Content="Undergraduate"/>
                                </ComboBox>
                                
                                <TextBlock Text="Military Status" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <ComboBox Name="cmbMilitary" Margin="0,0,0,5" Height="25">
                                    <ComboBoxItem Content="Completed"/>
                                    <ComboBoxItem Content="Exempted"/>
                                    <ComboBoxItem Content="Postponed"/>
                                    <ComboBoxItem Content="Not Applicable"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>

                        <!-- Agency Information -->
                        <GroupBox Header="Agency Information" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Recruiter Name" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtRecruiter" Margin="0,0,0,5" Height="25"/>
                                
                                <TextBlock Text="Leader Name" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtLeader" Margin="0,0,0,5" Height="25"/>
                                
                                <TextBlock Text="Unit Manager Name" FontWeight="SemiBold" Margin="0,5,0,2"/>
                                <TextBox Name="txtUnitManager" Margin="0,0,0,5" Height="25"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Voice Note Upload -->
                        <GroupBox Header="Voice Note" Margin="0,0,0,20">
                            <StackPanel>
                                <Button Name="btnSelectVoiceNote" Content="Select Voice Note File" 
                                        Height="30" Margin="0,5" Click="BtnSelectVoiceNote_Click"/>
                                <TextBlock Name="txtVoiceNotePath" Margin="0,5" TextWrapping="Wrap"
                                           FontStyle="Italic" Foreground="Gray" Text="No file selected"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Submit Button -->
                        <Button Name="btnAddCandidate" Content="Add Candidate" 
                                Height="35" Background="#007ACC" Foreground="White"
                                FontWeight="Bold" Click="BtnAddCandidate_Click"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- View Candidates Tab -->
            <TabItem Header="View Candidates">
                <DataGrid Name="dgCandidates" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                        <DataGridTextColumn Header="Education" Binding="{Binding EducationStatus}" Width="100"/>
                        <DataGridTextColumn Header="English Level" Binding="{Binding EnglishLevel}" Width="80"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="80"/>

                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Assess" 
                                                Click="AssessCandidate_Click" 
                                                Tag="{Binding Id}"
                                                Background="#28a745" 
                                                Foreground="White" 
                                                Margin="2" 
                                                Padding="5,2"
                                                ToolTip="Assess English level"/>
                                        <Button Content="Jobs" 
                                                Click="ViewJobs_Click" 
                                                Tag="{Binding Id}"
                                                Background="#17a2b8" 
                                                Foreground="White" 
                                                Margin="2" 
                                                Padding="5,2"
                                                ToolTip="View matched jobs"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>